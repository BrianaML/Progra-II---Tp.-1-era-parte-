<%- include("./partials/head") %>
<%- include("./partials/header")%>

<!-- product detail -->
<div class="container products-wrapper">
    <div class="d-flex align-items-center">
        <h2 class="products-title"><%= data.productos[0].nombre %></h2> 
        <p class="product-detail-description">
            <a href="/product/productAdd">Editar</a>
        </p>
    </div>
    <div class="product-detail">
        <div class="row">
                <article class="col-12 col-lg-8 product-detail-info">
                    <img src="<%= data.productos[0].imagen %>" alt="" class="product-detail-img">
                    <p class="product-detail-description"> <%= data.productos[0].descripcion %></p>
                </article>
            <div class="col-12 col-lg-4">
                <section class="comments">
                    <% for (let i = 0; i < data.productos[0].comentarios.length; i++) { %>
                        <article>
                            <img src="<%= data.productos[0].comentarios[i].imagen_perfil %>" alt="">
                            <div class="data">
                                <p class="user"> 
                                    <strong><a href="/users/profile"></a> <%= data.productos[0].comentarios[i].nombre_usuario %></strong>
                                </p>
                                <p><%= data.productos[0].comentarios[i].texto %></p>
                            </div>
                        </article>
                    <% } %>
                </section>

                <form class="form" action="/" method="get">
                    <label for="comentarioAdd">
                        <input class="form-input" type="text" value="" placeholder="Agregar comentario">
                    </label>
                    <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
                </form>
                <hr>
            </div>
        </div>
    </div>
</div>
<!-- /product detail -->

<%- include("./partials/footer") %>