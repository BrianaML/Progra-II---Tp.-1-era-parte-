<%- include("./partials/head") %>
<% if (isLogged) { %>
    <p>Hola, <%= usuario.usuario %>!</p>
    <%- include("./partials/headerLogueado") %>
<% } else { %>
    <%- include("./partials/header") %>
<% } %>

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Ingresar</h2>
        </div>
        <!-- Show the "ultimos" products -->
        <div class="col-12">
        <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <form action="/users/login" method="post" class="form_container">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required value="<%= typeof old !== 'undefined' && old.email ? old.email : '' %>">

            <label for="contrasenia">Contrase√±a:</label>
            <input type="password" id="contrasenia" name="contrasenia" required>

            <label for="recordarme">
                <input type="checkbox" id="recordarme" name="recordarme"> Recordarme
            </label>

            <button type="submit">Ingresar</button>
        </form>
    </div>
        
    </div>
</div>

<%- include("./partials/footer") %>