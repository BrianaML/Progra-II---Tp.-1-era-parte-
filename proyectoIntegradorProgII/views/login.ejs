<%- include("./partials/head") %>
<% if (isLogged) { %>
    <%- include("./partials/headerLogueado") %>
<% } else { %>
    <%- include("./partials/header") %>
<% } %>

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Ingresar</h2>
        </div>
        <!-- Show the "ultimos" products -->
        <div class="col-12">
            <form action="/users/login" method="post" class="form_container">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required value="<%= emailIngresado || '' %>%>">
                <% if (emailError) { %>
                    <div class="error-message"><%= emailError %></div>
                <% } %>
                <label for="contrasenia">Contrase√±a:</label>
                <input type="password" id="contrasenia" name="contrasenia" required>
                <% if (contraseniaError) { %>
                    <div class="error-message"><%= contraseniaError %></div>
                <% } %>
                <label for="recordarme">
                    Recordarme<input type="checkbox" id="recordarme" name="recordarme"> 
                </label>
                <button type="submit">Ingresar</button>
            </form>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>