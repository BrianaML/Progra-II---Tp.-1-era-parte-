<%- include("./partials/head") %>
<% if (isLogged) { %>
    <%- include("./partials/headerLogueado") %>
<% } else { %>
    <%- include("./partials/header") %>
<% } %>
<!-- Datos del usuario -->
<section class="info-usuario container products-wrapper">
    <div class="row">
        <div class="img-container offset-3 col-2">
            <img src="/images/users/<%= usuario.foto_perfil || 'default-image.png'%>" alt="<%= usuario.foto_perfil %>" class="foto-perfil">
        </div>
        <div class="data-container col-6">
            <div class="d-flex align-items-center ">
                <h1 class="main-title"> <%= usuario.usuario %>
                    <a href="/users/profile">
                        <i class="fas fa-cog"></i>
                    </a>
                </h1>
                <a class="btn mt-3 ml-4" href="/">SEGUIR</a>
            </div>
            <div>
                <ul class="">
                    <li><%= productos.length %> productos</li>
                    <li>200 seguidores</li>
                    <li>300 comentarios</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- /Datos del usuario -->

<!-- Mis productos -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Mis productos</h2>
            </div>
            <!-- Show mis productos -->
            <% if (productos.length > 0) { %>
                <% for (let i = 0; i < productos.length; i++) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/product/<%= productos[i].id %>">
                                <figure class="product-box_image imgProd">
                                    <img src="/images/products/<%= productos[i].img_producto %>" alt="<%= productos[i].descripcion %>">
                                </figure>
                                <article class="product-box_data">
                                    <h2><%= productos[i].nombre %></h2>
                                    <p><%= productos[i].descripcion %></p>
                                    <% if (productos[i].comentarios) { %>
                                        <p>Comentarios: <%= productos[i].comentarios.length %></p>
                                    <% } else { %>
                                        <p>Comentarios: 0</p>
                                    <% } %>
                                </article>
                            </a>
                        </section>
                    </div>
                <% } %>
            <% } else { %>
                <div class="col-12">
                    <h2 class="text-center">Todavía no cargaste ningún producto.</h2>
                </div>
            <% } %>
        </div>
    </div>
<%- include("./partials/footer") %>