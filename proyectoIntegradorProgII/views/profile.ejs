<%- include("./partials/head") %>
<%- include("./partials/headerLogueado")%>

<!-- Datos del usuario -->
<section class="info-usuario container products-wrapper">
    <div class="row">
        <div class="img-container offset-3 col-2">
            <img src= "<%= data.usuario[0].foto_perfil %>" alt="foto de perfil" class="foto-perfil">
        </div>
        <div class="data-container col-6">
            <div class="d-flex align-items-center ">
                <h1 class="main-title"> <%= data.usuario[0].usuario %>
                    <a href="/profile">
                        <i class="fas fa-cog"></i>
                    </a>
                </h1>
                <a class="btn mt-3 ml-4" href="/">SEGUIR</a>
            </div>
            <div>
                <ul class="">
                    <li>8 productos</li>
                    <li>200 seguidores</li>
                    <li>300 comentarios</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- /Datos del usuario -->

<!-- Mis productos -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Mis productos</h2>
            </div>
            <!-- Show mis productos -->
            <% for (let i=0; i<data.productos.length; i++) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/product">
                            <figure class="product-box_image imgProd">
                                <img src="<%= data.productos[i].imagen %>" alt="<%= data.productos[i].descripcion %>">
                            </figure>
                            <article class="product-box_data">
                                <h2><%= data.productos[i].nombre %></h2>
                                <p><%= data.productos[i].descripcion %></p>
                                <p>Comentarios: 3</p>
                            </article>
                        </a>
                    </section>
                </div>
            <% } %>
        </div>
    </div>

<%- include("./partials/footer") %>