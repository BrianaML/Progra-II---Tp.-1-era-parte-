<%- include("./partials/head") %>
<% if (isLogged) { %>
    <%- include("./partials/headerLogueado") %>
<% } else { %>
    <%- include("./partials/header") %>
<% } %>


<% if (productos.length === 0) { %>
    <p>No se encontraron resultados de tu b√∫squeda.</p>
<% } else { %>
    <% for (let i = 0; i < productos.length; i++) { %>
        <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
                <a href="/product/<%= productos[i].id %>">
                    <figure class="product-box_image imgProd">
                        <img src="/images/products/<%= productos[i].imagen %>" alt="<%= productos[i].descripcion %>">
                    </figure>
                    <article class="product-box_data">
                        <h2><%= productos[i].nombre %></h2>
                        <p><%= productos[i].descripcion %></p>
                        <p>Comentarios: <%= productos[i].comentarios.length %></p>
                    </article>
                </a>
            </section>
        </div>
    <% } %>
<% } %>


<%- include("./partials/footer") %>
